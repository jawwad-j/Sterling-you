rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // 1. Product Images: Publicly readable for your storefront
    match /products/{allPaths=**} {
      allow read: if true;
      // FIX: Changed from 'if false' to check for authentication
      allow write: if request.auth != null; 
    }

    // 2. Private ERP/Shipping Docs: Completely locked down
    match /erp_documents/{allPaths=**} {
      allow read, write: if false;
    }
  }
}